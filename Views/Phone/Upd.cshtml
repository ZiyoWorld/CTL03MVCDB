@using CTL03MVCDB.Models;
@{
    Layout = null;
    Phone[] s = ViewBag.phones;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Upd</title>
</head>
<body>
    <h1 class="text-center">Welcome to Update from Database</h1>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-3">
                <table class="table table-hover">
                    <thead class="text-info">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Phone a in s)
                        {
                            <tr>
                                <td>@a.ID</td>
                                <td>@a.Name</td>
                                <td>@a.PNumber</td>
                                <td> <a href="~/Phone/UpdForm?ID=@a.ID" class="badge bg-primary text-white p-2">Update</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
                <button class="btn btn-success p-2">
                    <a href="~/Phone/Index" class="text-white text-decoration-none">Index</a>
                </button>

            </div>

        </div>

    </div>
