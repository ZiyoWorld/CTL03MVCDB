                        <input type="text" class="form-control" name="PNumber" value="@ViewBag.phones.PNumber" />
                        <input type="submit" class="form-control btn btn-success my-2" name="Press" value="OK" />
                        <input type="submit" class="form-control" name="Press" value="Cancel" />*@
                    </form>

               
                
                
            </div>

        </div>
        
    </div>
</body>
</html>
