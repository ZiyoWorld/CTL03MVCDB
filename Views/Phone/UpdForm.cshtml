
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>UpdForm</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-10 offset-1">
                    <form action="~/Phone/UpdConfirm" class="form-control" method="post">
                        <div class="card">
                            <div class="card-header">
                                <h1>Welcome to Update Form</h1>
                            </div>
                            <div class="card-body">
                                <label id="ID">ID:</label>
                                <input type="number" class="form-control" name="ID" value="@ViewBag.phones.ID" readonly />
                                <label id="Name">Name:</label>
                                <input type="text" id="Name" class="form-control py-2" name="Name" value="@ViewBag.phones.Name" />
                                <label id="PNumber">PhoneNumber:</label>
                                <input type="text" id="PNumber" class="form-control " name="PNumber" value="@ViewBag.phones.PNumber" />

                               
                            </div>
                            <div class="card-footer d-flex">

                                <input type="submit" class="btn btn-success" name="Press" value="OK" />
                                <input type="submit" class="btn btn-danger mx-2" name="Press" value="Cancel" />
                                <button type="button" class="btn btn-primary"> <a href="~/Phone/Index" class="text-white">Index</a>  </button>
                            </div>

                        </div>

                        @*<input type="number" class="form-control" name="ID" value="@ViewBag.phones.ID" readonly />
