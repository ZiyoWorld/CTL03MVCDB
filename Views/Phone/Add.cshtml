
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Add</title>
</head>
<body>
    
    <div class="container mt-2">
        <div class="row">
            <div class="col-lg-8 offset-3">
                   <h1 class="my-4">Welcome to Add file in databese</h1>
                    <form action="~/Phone/AddConfirm" method="post">
                       <div class="row">
                           <div class="col-8">
                               <div class="card">
                                   <div class="card-header">
                                       <h1>Add file</h1>
                                   </div>
                                   <div class="card-body">
                                       <label id="name">Name:</label>
                                       <input type="text" id="name" class="form-control border-none" name="Name" /> 
                                       <label id="phone">PhoneNumber:</label>
                                       <input type="text" id="phone" class="form-control" name="PNumber" /> 
                                   </div>
                                   <div class="card-footer">
                                       <input type="submit" class="btn btn-success" name="Press" value="OK" /> 
                                       <input type="submit" class="btn btn-danger" name="Press" value="Cancel" /> 
                                       <button type="button" class="btn btn-primary"><a href="~/Phone/Index" class="text-white">Index</a></button>
                                   </div>

                               </div>

                           </div>

                       </div>
                        
                       
                    </form>
                    
                


            </div>

        </div>

    </div>

    
</body>
</html>
