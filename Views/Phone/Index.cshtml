@using CTL03MVCDB.Models;
@{
    Layout = null;
    Phone[] s = ViewBag.phones; 
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Index</title>
</head>
<body>
    <div>
        <h1 class="text-center">Welcome to Call Center</h1>
         
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-3">
                    <table class="table table-hover">
                        <thead class="text-info">
                            <tr>
                                <th>ID</th>
                                 <th>Name</th>
                                <th>Phone</th>
                                 <th>Edit</th>
                                 <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(Phone a in s)
                             {
                            <tr>
                                <td>@a.ID</td>
                                <td>@a.Name</td>
                                <td>@a.PNumber</td>
                                <td> <a href="~/Phone/Upd" class="badge bg-primary text-white p-2">Update</a></td>
                                <td><a href="~/Phone/Del" class="badge bg-danger text-decoration-none text-white p-2" >Delete</a></td>

                            </tr>
                                 
                             }
                        </tbody>
                    </table>
                    <button class="btn btn-success p-2">
                        <a href="~/Phone/Add" class="text-white text-decoration-none">Add</a>
                    </button>

                </div>

            </div>

        </div>


        

       
        
       

    </div>
</body>
</html>
